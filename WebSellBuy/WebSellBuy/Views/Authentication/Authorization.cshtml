@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Authorization</title>
    <script src="~/Content/js/jquery/jquery.js"></script>
    <script src="~/Content/js/bootsrap/bootstrap.min.js"></script>
    <script src="~/Content/js/allSite/commonJs.js"></script>
    <link href="~/Content/css/AuthenticationStyle/authentication.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/js/AuthenticationJs/SignIn_SignUp.js"></script>
    <link href="~/Content/css/allPages/loader.css" rel="stylesheet" />
</head>
<body>


    <div class="loadingBlock">
        <div class="loader"></div>
    </div>



    <div id="fullscreen_bg" class="fullscreen_bg"></div>
    <div id="fullscreen_bgs" class="fullscreen_bgs" />
    <form class="form-signin">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h3 class="text-center">
                                Регистрация
                            </h3>
                            <form class="form form-signup" role="form">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-pencil"></span>
                                        </span>
                                        <input type="text" id="surname" class=" form-control" placeholder="Фамилия" required />

                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-pencil"></span></span>
                                        <input type="text" id="name" class="form-control" placeholder="Имья" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-pencil"></span></span>
                                        <input type="text" id="lastname" class="form-control" placeholder="Отчество" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-phone"></span></span>
                                        <input type="text" id="phone" class="form-control" placeholder="Телефон" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                                        <input type="email" id="email" class="form-control" placeholder="Почта" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                                        <input type="text" id="login" class="form-control" placeholder="e-mail / login" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                                        <input type="password" id="password" class="form-control" placeholder="password" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                                        <input type="password" id="confirmPassword" class="form-control" placeholder="confirm password" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="nationality" class="cols-sm-2 control-label">Страна</label>
                                    <div class="cols-sm-10">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-globe" aria-hidden="true"></i></span>
                                            <select class="form-control" name="country" id="country" onchange="getRegion(this)">
                                                <option></option>
                                                @*<option>-select-</option>
                                                    <option>India</option>
                                                    <option>Singapore</option>
                                                    <option>Malaysia</option>
                                                    <option>USA</option>*@
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group regionClass">
                                    <label for="country" class="cols-sm-2 control-label">Регион</label>
                                    <div class="cols-sm-10">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-map-marker" aria-hidden="true"></i></span>
                                            <select class="form-control" name="region" id="region" onchange="getCity(this)">
                                                <option></option>
                                                @*<option>India</option>
                                                    <option>Singapore</option>
                                                    <option>Malaysia</option>
                                                    <option>USA</option>*@
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group sityClass">
                                    <label for="country" class="cols-sm-2 control-label">Город</label>
                                    <div class="cols-sm-10">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-map-marker" aria-hidden="true"></i></span>
                                            <select class="form-control" name="city" id="city" onchange="getIdCity(this)">
                                                <option></option>
                                                @*<option>India</option>
                                                    <option>Singapore</option>
                                                    <option>Malaysia</option>
                                                    <option>USA</option>*@
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="country" class="cols-sm-2 control-label">Фото для профиля</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                        <input type="file" class="uploadImage form-control" value="выбрать фотографию" />
                                        <input type="button" class="form-control " value="Загрузить" onclick="UploadImage(2)" />
                                    </div>
                                </div>
                                <!--  <div class="form-group">
                                     <div class="input-group">
                                         <span class="input-group-addon"><span class="glyphicon glyphicon-question-sign"></span></span>
                                         <select id="subject" placeholder="Type"
                                         class="form-control" required="required">
                                         <option value="suggestions">Secretary</option>
                                         <option value="product">Assistant</option> </select>
                                         </div>
                                 </div> -->
                                @*<a href="#" class="btn btn-sm btn-primary btn-block" role="button">
                                        регистрация
                                    </a>*@


                                <span onclick="registrationUser()" class="btn btn-sm btn-primary btn-block" role="button">Регистрация</span>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </form>
</body>
</html>
